<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/holo_orange_dark"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layoutDirection="rtl">
    <ImageView
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgBack"
        app:srcCompat="@drawable/cogwheel_outline_svgrepo_com" />
    <FrameLayout
        android:id="@+id/flCarts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone">
        <ImageView
            android:id="@+id/imgCarts"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/carts"
            android:padding="2dp"
            android:layout_gravity="top|start" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5"
            android:layout_gravity="center"
            android:background="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:padding="2dp"/>


    </FrameLayout>
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_left"
        android:padding="2dp"
        android:layout_toStartOf="@+id/flCarts"
        android:rotation="180"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="گروه جدید"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"/>
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imgConfirm" />
    <ImageView
        android:id="@+id/imgConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        app:tint="@color/white"
        android:visibility="gone"/>

</RelativeLayout>